---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <Header />
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body,
      html {
        height: 100%;
        font-family: Arial, sans-serif;
        overflow-x: hidden;
        overflow-y: hidden;
      }

      .parallax-container {
        display: flex;
        width: 300vw; /* Total width for 3 full-screen sections */
        height: 100vh; /* Full height for parallax */
        transition: transform 1s ease; /* Smooth transition when clicking */
        cursor: pointer;
      }

      .parallax-image {
        position: relative;
        width: 100vw; /* Full width */
        height: 100vh; /* Full height */
        background-position: center;
        background-size: cover; /* Maintain aspect ratio */
      }

      .image1 {
        background-image: url('/assets/image1.png');
      }

      .image2 {
        background-image: url('/assets/image2.png');
      }

      .image3 {
        background-image: url('/assets/image3.png');
      }
      

      .content {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 2rem;
        color: white;
        position: absolute; /* Absolute positioning for overlay */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }

    </style>
  </head>

  <body>

    <div class="parallax-container" id="parallaxContainer">
      <div class="parallax-image image1"></div>
      <div class="parallax-image image2"></div>
      <div class="parallax-image image3"></div>
      <div class = "parallax image image4"></div>
      <div class = "parallax image image5"></div>
    </div>

    <script>
      const handleParallax = () => {
        let currentPosition = 0;
        const totalSections = 3; // Number of parallax sections
        const parallaxContainer = document.getElementById('parallaxContainer');

        // Function to move the parallax effect left-to-right
        function moveParallax() {
          currentPosition = (currentPosition + 1) % totalSections;
          if (parallaxContainer) {
            parallaxContainer.style.transform = `translateX(-${currentPosition * 100}vw)`;
          }
        }

        // Attach the event listener to the parallax container
        if (parallaxContainer) {
          parallaxContainer.addEventListener('click', moveParallax);
        } else {
          console.error('Parallax container not found');
        }
      };

      handleParallax(); // Call the function to set up the event listener
    </script>
  </body>
</html>
