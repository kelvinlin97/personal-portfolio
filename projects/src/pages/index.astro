---
import BaseHead from './../components/BaseHead.astro';
import Header from './../components/Header.astro';
import Footer from './../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from './../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <Header />
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body,
      html {
        height: 100%;
        font-family: Arial, sans-serif;
        overflow-x: hidden;
        overflow-y: hidden;
      }

      .parallax-container {
        display: flex;
        width: 700vw; 
        height: 100vh; 
        transition: transform 1s ease; 
      }

      .parallax-image {
        position: relative;
        width: 100vw; 
        height: 100vh; 
        background-position: center;
        background-size: cover; 
      }

      .image4 {
        background-image: url('/assets/image4.png');
      }

      .image5 {
        background-image: url('/assets/image5.png');
      }

      .image6 {
        background-image: url('/assets/image6.png');
      }

      .image7 {
        background-image: url('/assets/image7.png');
      }

      .image8 {
        background-image: url('/assets/image8.png');
      }

      .image9 {
        background-image: url('/assets/image9.png');
      }

      .image10 {
        background-image: url('/assets/image10.png');
      }

      .content {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 2rem;
        color: white;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
    </style>
  </head>

  <body>

    <div class="parallax-container" id="parallaxContainer">
      <div class="parallax-image image4"></div>
      <div class="parallax-image image5"></div>
      <div class="parallax-image image6"></div>
      <div class="parallax-image image7"></div>
      <div class="parallax-image image8"></div>
      <div class="parallax-image image9"></div>
      <div class="parallax-image image10"></div>
    </div>

    <script>
      const handleParallax = () => {
        let currentPosition = 0;
        const totalSections = 7; // Number of parallax sections
        const parallaxContainer = document.getElementById('parallaxContainer');

        function moveParallax(event) {
          const screenWidth = window.innerWidth;
          const clickX = event.clientX;

          if (clickX < screenWidth / 2) {
            currentPosition = currentPosition > 0 ? currentPosition - 1 : totalSections - 1;
          } else {
            currentPosition = (currentPosition + 1) % totalSections;
          }

          if (parallaxContainer) {
            parallaxContainer.style.transform = `translateX(-${currentPosition * 100}vw)`;
          }
        }

        window.addEventListener('click', moveParallax);
      };

      handleParallax(); 
    </script>
  </body>
</html>
